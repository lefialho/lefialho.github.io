---
import "@fontsource/poppins";
import "@fontsource/poppins/500.css";
import '@fontsource/qwitcher-grypen';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Leandro Fialho - Portfólio">
    <meta name="description" content="Esse é o meu portfólio de desenvolvimento frontend para web (sites e aplicativos)">
    <meta property="site_name" content="LeandroFialho - Portfolio">
    <meta name="Keywords" content="Leandro Fialho, Web, site, identidade visual, logo, desenvolvimento web, front-end, frontend, design, designer HTML, CSS, JavaScript, portfolio">
    <meta name="Author" content="Leandro Fialho">
    <meta property="og:title" content="Leandro Fialho - Web Portfolio" />
    <meta property="og:url" content="http://leandrofialho.com" />
    <meta property="og:type" content="website">
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:description" content="Esse é o meu portfólio de desenvolvimento frontend para web (sites e aplicativos)" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  :root {
    --primary-color: #212529;
    --primary-color-hover: #414141;
    --secondary-color: #aaa;
    --secondary-color-hover: #7c7c7c;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: Poppins, sans-serif;
    background: var(--primary-color);
    color: var(--secondary-color);
		height: 100%;
  }

	body {
		display: flex;
		flex-direction: column;
		padding: clamp(1rem, 5vw, 3.75rem);
		min-height: 100%;
    position: relative;
	}

	main {
    display: grid;
    place-content: center;
		flex: 1;
    margin: 2rem 0;
    opacity: 0;
    animation: anime-in .3s ease-in-out forwards;
	}

  img,
  picture {
    max-width: 100%;
    display: block;
  }

  input,
  button,
  textarea,
  select {
    font-family: inherit;
    font-size: inherit;
  }

  button, a {
    background: none;
    border: 1px solid transparent;

    &:focus-visible {
      outline: 2px solid white;
      outline-offset: 2px;
    }
  }

  p {
    line-height: 1.7;
  }

  :where(a) {
    color: #fff;
    text-decoration: none;
  }

  :where(ul[class], ol[class]) {
    list-style: none;
    padding: 0;
  }

  .block-default {
    margin-bottom: 1.5rem;

    h2 {
      color: white;
      font-size: clamp(0.875rem, 1vw + 1rem, 1.25rem);
      font-weight: 400;
      margin-bottom: .25rem
    }

    p {
      max-width: 75ch;
    }

    .telefone {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--secondary-color);

      &:hover {
        text-decoration: underline;
        text-underline-offset: 4px;
      }
    }
  }

  @keyframes anime-in {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @keyframes anime-bottom {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes anime-right {
    from {
      opacity: 0;
      transform: translateX(-60px);
    }

    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes anime-chevron {
    0% {
      transform: translateX(0);
    }

    50% {
      transform: translateX(50%);
    }

    100% {
      transform: translateX(0);
    }
  }
</style>
