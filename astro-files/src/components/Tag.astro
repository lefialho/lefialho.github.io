---
interface Props {
  tag: string;
  tagText: string;
}

const { tag, tagText } = Astro.props;
---

<span class="tag" data-tippy-content={tagText}>{tag}</span>

<style lang="scss">
  .tag {
    display: inline-block;
    color: white;
    border: 1px solid var(--primary-color-hover);
    border-radius: 32px;
    padding: .25rem .5rem;
    font-size: 0.75rem
  }
</style>